{
  "compilerOptions": {
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "module": "umd",
    "target": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictBindCallApply": false,
    "lib": [
      "es6",
      "es2016.array.include",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./src",
      "./node_modules/@types"
    ],
  },
  "include": [
    "./src", "interface/typing.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}